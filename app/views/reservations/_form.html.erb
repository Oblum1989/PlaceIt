<div id="reservation-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><%= title %></h4>
            </div>
            <%= form_for @reservation, remote: true do |f| %>
            <div class="modal-body">
                <div class="form-group">
                    <%= f.label :name, "Nombre" %>
                    <%= f.text_field :name, class: "form-control input-lg" %>
                </div>
                <div class="form-group">
                    <%= f.label :email, "Correo" %>
                    <%= f.text_field :email, class: "form-control input-lg" %>
                </div>
                <div class="form-group">
                    <%= f.label :cedula, "Cedula" %>
                    <%= f.text_field :cedula, class: "form-control input-lg" %>
                </div>
                <div class="form-group">
                    <%= f.label :cellphone, "Celular" %>
                    <%= f.text_field :cellphone, class: "form-control input-lg" %>
                </div>
            </div>

            <div class="modal-footer">
                <%= f.submit class: "btn btn-primary btn-lg btn-block", value: "+ Nueva reserva" %>
            </div>
            <% end %>
        </div>
    </div>
</div>